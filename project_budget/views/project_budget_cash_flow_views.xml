<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="project_budget_planned_cash_flow_view_tree" model="ir.ui.view">
        <field name="name">project.budget.planned.cash.flow.tree</field>
        <field name="model">project_budget.planned_cash_flow</field>
        <field name="arch" type="xml">
            <tree default_order="date" limit="100">
                <button name="action_copy_flow" class="btn btn-link" type="object" title="Copy" string="Copy"
                        attrs="{'invisible': [('can_edit', '=', False)]}"/>
                <field name="company_id" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="can_edit" invisible="1"/>
                <field name="project_have_steps" invisible="1"/>
                <field name="flow_id"/>
                <field name="forecast"/>
                <field name="date"/>
                <field name="step_project_child_id" options="{'no_open': True}"
                       domain="[('id', 'in', parent.step_project_child_ids), ('stage_id.project_state', '!=', 'cancel')]"
                       attrs="
                       {
                            'column_invisible': [('parent.project_have_steps', '=', False)],
                            'required': [('project_have_steps', '=', True)]
                       }"/>
                <field name="amount" string="Amount With Tax" groups="base.group_multi_currency" widget="monetary"
                       optional="hide"/>
                <field name="currency_id" groups="base.group_multi_currency" optional="hide"/>
                <field name="amount_in_company_currency" string="Amount With Tax In Company Currency"
                       widget="monetary"/>
                <field name="amount_remaining" string="Remaining Amount" groups="base.group_multi_currency"
                       optional="hide"
                       decoration-success="amount_remaining_in_company_currency == 0"
                       decoration-danger="amount_remaining_in_company_currency &lt; 0"
                       decoration-warning="amount_remaining_in_company_currency != 0"/>
                <field name="amount_remaining_in_company_currency" string="Remaining Amount In Company Currency"
                       decoration-success="amount_remaining_in_company_currency == 0"
                       decoration-danger="amount_remaining_in_company_currency &lt; 0"
                       decoration-warning="amount_remaining_in_company_currency != 0"/>
            </tree>
        </field>
    </record>

    <record id="project_budget_planned_cash_flow_view_form" model="ir.ui.view">
        <field name="name">project.budget.planned.cash.flow.form</field>
        <field name="model">project_budget.planned_cash_flow</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="project_have_steps" invisible="1"/>
                    <field name="projects_id" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="currency_id_domain" invisible="1"/>
                    <field name="is_currency_company" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="step_project_child_id" options="{'no_create_edit': True, 'no_open': True}"
                                   domain="[('id', 'in', parent.step_project_child_ids), ('stage_id.project_state', '!=', 'cancel')]"
                                   attrs="
                                   {
                                        'invisible': [('project_have_steps', '=', False)],
                                        'required': [('project_have_steps', '=', True)]
                                   }"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="amount" string="Amount With Tax" widget="monetary"/>
                            <field name="amount_in_company_currency" string="Amount With Tax In Company Currency"
                                   groups="base.group_multi_currency" widget="monetary"
                                   attrs="{'invisible': [('is_currency_company', '=', True)]}"/>
                        </group>
                        <group>
                            <group>
                                <field name="currency_id" domain="currency_id_domain"
                                       groups="base.group_multi_currency"/>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_budget_fact_cash_flow_view_tree" model="ir.ui.view">
        <field name="name">project.budget.fact.cash.flow.tree</field>
        <field name="model">project_budget.fact_cash_flow</field>
        <field name="arch" type="xml">
            <tree default_order="date" limit="100">
                <button name="action_copy_flow" class="btn btn-link" type="object" title="Copy" string="Copy"
                        attrs="{'invisible': [('parent.can_edit', '=', False)]}"/>
                <field name="project_have_steps" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="date"/>
                <field name="step_project_child_id" options="{'no_open': True}"
                       attrs="
                       {
                            'column_invisible': [('parent.project_have_steps', '=', False)],
                            'required': [('parent.project_have_steps', '=', True)]
                       }"/>
                <field name="amount" string="Amount With Tax" groups="base.group_multi_currency" widget="monetary"
                       optional="hide"/>
                <field name="amount_in_company_currency" string="Amount With Tax In Company Currency"
                       widget="monetary"/>
                <field name="amount_distribution" string="Distribution Amount" groups="base.group_multi_currency"
                       widget="monetary" optional="hide"/>
                <field name="amount_distribution_in_company_currency" string="Distribution Amount In Company Currency"
                       widget="monetary"/>
                <field name="amount_remaining" string="Remaining Amount" groups="base.group_multi_currency"
                       optional="hide"
                       decoration-danger="amount_remaining &lt; 0"
                       decoration-warning="amount_remaining != 0"/>
                <field name="amount_remaining_in_company_currency" string="Remaining Amount In Company Currency"
                       decoration-danger="amount_remaining_in_company_currency &lt; 0"
                       decoration-warning="amount_remaining_in_company_currency != 0"/>
            </tree>
        </field>
    </record>

    <record id="project_budget_fact_cash_flow_view_form" model="ir.ui.view">
        <field name="name">project.budget.fact.cash.flow.form</field>
        <field name="model">project_budget.fact_cash_flow</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <field name="project_have_steps" invisible="1"/>
                    <field name="can_edit" invisible="1"/>
                    <field name="projects_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="is_currency_company" invisible="1"/>
                    <field name="currency_id_domain" invisible="1"/>
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="step_project_child_id" options="{'no_create_edit': True, 'no_open': True}"
                                   domain="[('id', 'in', parent.step_project_child_ids), ('stage_id.project_state', '!=', 'cancel')]"
                                   attrs="
                                   {
                                        'invisible': [('parent.project_have_steps', '=', False)],
                                        'required': [('parent.project_have_steps', '=', True)]
                                   }"/>
                        </group>
                    </group>
                    <group name="amount" col="3">
                        <group>
                            <field name="amount" widget="monetary"/>
                            <field name="amount_in_company_currency" groups="base.group_multi_currency"
                                   widget="monetary" attrs="{'invisible': [('is_currency_company', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="currency_id" domain="currency_id_domain" groups="base.group_multi_currency"/>
                            <field name="currency_rate" groups="base.group_multi_currency"
                                   attrs="{'invisible': [('is_currency_company', '=', True)]}"/>
                        </group>
                    </group>
                    <field name="distribution_cash_ids" widget="section_and_note_one2many" mode="tree"
                           attrs="{'readonly': [('can_edit', '=', False)]}">
                        <tree editable="bottom">
                            <field name="factoring"/>
                            <field name="fact_cash_flow_id" invisible="1"/>
                            <field name="fact_currency_id" invisible="1"/>
                            <field name="planned_cash_flow_id"/>
                            <field name="plan_currency_id" invisible="1"/>
                            <field name="company_currency_id" invisible="1"/>
                            <field name="amount_plan" string="Planned Amount With Tax" widget="monetary"/>
                            <field name="amount_plan_in_company_currency"
                                   string="Planned Amount With Tax In Company Currency"
                                   groups="base.group_multi_currency" widget="monetary" optional="hide"/>
                            <field name="amount" string="Amount With Tax" widget="monetary"/>
                            <field name="amount_in_company_currency" string="Amount With Tax In Company Currency"
                                   groups="base.group_multi_currency" widget="monetary" optional="hide"/>
                            <field name="amount_remaining" string="Remaining Amount" widget="monetary"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
