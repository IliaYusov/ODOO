<?xml version="1.0" ?>
<odoo>
    <record id="auth_oauth_provider_view_form_inherit_oidc" model="ir.ui.view">
        <field name="name">auth.oauth.provider.form.inherit.oidc</field>
        <field name="model">auth.oauth.provider</field>
        <field name="inherit_id" ref="auth_oauth.view_oauth_provider_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="flow" />
                <field name="token_map" placeholder="e.g from:to upn:email sub:user_id"/>
            </field>
            <field name="client_id" position="after">
                <field name="client_secret" password="True"/>
            </field>
            <field name="validation_endpoint" position="after">
                <field name="token_endpoint"/>
                <field name="jwks_uri"/>
            </field>
        </field>
    </record>
</odoo>
