<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ir_rule_contract_contract_access_project_members" model="ir.rule">
            <field name="name">Access to contract by project team</field>
            <field name="model_id" ref="model_contract_contract"/>
            <field name="domain_force">
                [
                    ('project_member_ids.employee_id.user_id', '=', user.id),
                ]
            </field>
            <field name="groups" eval="[(4, ref('project_budget.project_budget_users'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
