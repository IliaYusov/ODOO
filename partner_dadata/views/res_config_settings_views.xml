<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_inherit_partner_dadata" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.partner.dadata</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="contacts_extended.res_config_settings_view_form_inherit_partner_extension"/>
        <field name="arch" type="xml">
            <xpath expr="//div/div[@id='partner_dadata_setting']" position="replace">
                <div id="partner_dadata_setting" attrs="{'invisible': [('module_partner_dadata', '=', False)]}">
                    <div class="content-group mt16">
                        <label for="token" class="o_light_label"/>
                        <field name="token" password="True"/>
                    </div>
                    <div class="content-group">
                        <label for="secret" class="o_light_label"/>
                        <field name="secret" password="True"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
