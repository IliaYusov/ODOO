<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="task_task_view_form_inherit_hr_timesheet" model="ir.ui.view">
        <field name="name">task.task.view.form.inherit.hr.timesheet</field>
        <field name="model">task.task</field>
        <field name="inherit_id" ref="task.task_task_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='planned_hours']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='planned_hours']" position="after">
                <field name="total_hours_spent" sum="Total Hours Spent" optional="hide"
                       attrs="{'invisible': ['|', '|', ('allow_timesheets', '=', False), ('parent_ref_type', '!=', 'project.project'), ('root_task_id', '!=', False)]}"
                       groups="hr_timesheet_mngmnt.hr_timesheet_group_user"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']/tree/field[@name='stage_id']" position="after">
                <field name="planned_hours" sum="Planned Hours" optional="hide"
                       groups="hr_timesheet_mngmnt.hr_timesheet_group_user"/>
                <field name="effective_hours" sum="Hours Spent" optional="hide"
                       groups="hr_timesheet_mngmnt.hr_timesheet_group_user"/>
                <field name="subtask_effective_hours" sum="Sub-tasks Hours Spent" optional="hide"
                       groups="hr_timesheet_mngmnt.hr_timesheet_group_user"/>
                <field name="total_hours_spent" sum="Total Hours Spent" optional="hide"
                       groups="hr_timesheet_mngmnt.hr_timesheet_group_user"/>
            </xpath>
            <xpath expr="//notebook/page[@name='sub_tasks']" position="after">
                <t groups="hr_timesheet_mngmnt.hr_timesheet_group_user">
                    <field name="subtask_count" invisible="1"/>
                    <field name="allow_timesheets" invisible="1"/>
                </t>
                <page name="timesheets_page" string="Timesheets"
                      attrs="{'invisible': ['|', '|', ('allow_timesheets', '=', False), ('parent_ref_type', '!=', 'project.project'), ('root_task_id', '=', False)]}"
                      groups="hr_timesheet_mngmnt.hr_timesheet_group_user">
                    <field name="timesheet_ids" mode="tree">
                        <tree editable="bottom" string="Timesheets" default_order="date">
                            <field name="date"/>
                            <field name="user_id" invisible="1"/>
                            <field name="employee_domain_ids" invisible="1"/>
                            <field name="employee_id" required="1" widget="many2one_avatar_employee"
                                   context="{'active_test': True}" options="{'relation': 'hr.employee'}"
                                   on_change="_onchange_employee_id(date)"/>
                            <field name="role_domain_ids" invisible="1"/>
                            <field name="role_id" on_change="_onchange_role_id(employee_id, date)"
                            attrs="{'required': [('project_id', '!=', False)], 'column_invisible': [('project_id', '=', False)],}"/>
                            <field name="name" required="0"/>
                            <field name="unit_amount"
                                   decoration-danger="unit_amount &gt; 24 or unit_amount &lt; 0"/>
                            <field name="amount" groups="hr_timesheet_mngmnt.hr_timesheet_group_manager"/>
                            <field name="project_id" invisible="1"/>
                            <field name="task_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                    <group>
                        <group class="oe_subtotal_footer oe_right" name="project_hours">
                            <span class="o_td_label float-start">
                                <label class="fw-bold" for="effective_hours" string="Hours Spent"/>
                            </span>
                            <field name="effective_hours" widget="timesheet_uom" nolabel="1"/>
                            <span class="o_td_label float-start">
                                <label class="fw-bold" for="subtask_effective_hours" string="Hours Spent on Sub-tasks:"
                                       attrs="{'invisible' : [('subtask_effective_hours', '=', 0.0)]}"/>
                            </span>
                            <field name="subtask_effective_hours" class="mt-2"
                                   attrs="{'invisible' : [('subtask_effective_hours', '=', 0.0)]}" nolabel="1"/>
                            <span attrs="{'invisible': [('subtask_effective_hours', '=', 0.0)]}" class="o_td_label float-start">
                                <label class="fw-bold" for="total_hours_spent" string="Total Hours"
                                       attrs="{'invisible': [('subtask_effective_hours', '=', 0.0)]}"/>
                            </span>
                            <field name="total_hours_spent" widget="timesheet_uom" class="oe_subtotal_footer_separator" nolabel="1"
                                   attrs="{'invisible' : [('subtask_effective_hours', '=', 0.0)]}" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
