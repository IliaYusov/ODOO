<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="task_task_report_analysis_view_pivot_inherit_hr_timesheet" model="ir.ui.view">
        <field name="name">task.task.report.analysis.pivot.inherit.hr.timesheet</field>
        <field name="model">task.task.report.analysis</field>
        <field name="inherit_id" ref="task.task_task_report_analysis_view_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_ref']" position='replace'>
                <field name="project_id" type="row"/>
            </xpath>
            <pivot position="inside">
                <field name="planned_hours" type="measure"/>
                <field name="effective_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="task_task_report_analysis_view_graph_inherit_hr_timesheet" model="ir.ui.view">
        <field name="name">task.task.report.analysis.graph.inherit.hr.timesheet</field>
        <field name="model">task.task.report.analysis</field>
        <field name="inherit_id" ref="task.task_task_report_analysis_view_graph"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_ref']" position='replace'>
                <field name="project_id"/>
            </xpath>
            <xpath expr="//field[@name='project_id']" position='after'>
                <field name="effective_hours" type="measure"/>
            </xpath>
        </field>
    </record>
</odoo>
