<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_partner_extension" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.partner.extension</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="inside">
                <div class="row mt16 o_settings_container" name="dadata_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="dadata">
                        <div class="o_setting_left_pane">
                            <field name="module_partner_dadata"/>
                        </div>
                        <div class="o_setting_right_pane" id="partner_dadata_settings">
                            <label for="module_partner_dadata"/>
                            <a href="https://dadata.ru/" title="Documentation" class="o_doc_link" target="_blank"/>
                            <div class="text-muted">
                                It will help your immediately enter clean data.
                                Enrich contacts with information from government directories.
                            </div>
                            <div id="partner_dadata_setting" class="content-group"
                                 attrs="{'invisible': [('module_partner_dadata', '=', False)]}"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
