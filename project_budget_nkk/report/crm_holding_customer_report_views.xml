<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_holding_customer_report_view_search" model="ir.ui.view">
        <field name="name">crm.holding.customer.report.search</field>
        <field name="model">crm.holding.customer.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="customer_id"
                       filter_domain="['|', ('customer_id.name', 'ilike', self), ('customer_id.vat', 'ilike', self)]"/>
                <field name="industry_id" filter_domain="[('industry_id.name', 'ilike', self)]"/>
                <field name="technological_direction_id"
                       filter_domain="[('technological_direction_id.name', 'ilike', self)]"/>
                <field name="key_account_manager_id" filter_domain="[('key_account_manager_id.name', 'ilike', self)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_customer_id" context="{'group_by': 'customer_id'}"/>
                    <filter name="group_by_technological_direction_id"
                            context="{'group_by': 'technological_direction_id'}"/>
                    <filter name="group_by_key_account_manager_id" context="{'group_by': 'key_account_manager_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="crm_holding_customer_report_view_tree" model="ir.ui.view">
        <field name="name">crm.holding.customer.report.tree</field>
        <field name="model">crm.holding.customer.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_id"/>
                <field name="industry_id"/>
                <field name="technological_direction_id"/>
                <field name="key_account_manager_id" widget="many2one_avatar_employee"
                       options="{'relation': 'hr.employee.public'}"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="crm_holding_customer_report_action" model="ir.actions.act_window">
        <field name="name">Holding Customers</field>
        <field name="res_model">crm.holding.customer.report</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data for analysis.
            </p>
            <p>
                Analyze your holding customers.
            </p>
        </field>
    </record>
</odoo>
