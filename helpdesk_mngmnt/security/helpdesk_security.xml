<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_team_rule_company" model="ir.rule">
        <field name="name">Team multi-company</field>
        <field name="model_id" ref="model_helpdesk_team"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="helpdesk_team_group_manager" model="ir.rule">
        <field name="name">Helpdesk admin: see all</field>
        <field name="model_id" ref="model_helpdesk_team"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('helpdesk_mngmnt.helpdesk_group_manager'))]"/>
    </record>

    <record id="helpdesk_ticket_rule_company" model="ir.rule">
        <field name="name">Ticket multi-company</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="helpdesk_ticket_group_user" model="ir.rule">
        <field name="name">Ticket: see only my tickets</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="domain_force">[('author_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('helpdesk_mngmnt.helpdesk_group_user'))]"/>
    </record>

    <record id="helpdesk_ticket_group_manager" model="ir.rule">
        <field name="name">Helpdesk admin: see all</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('helpdesk_mngmnt.helpdesk_group_manager'))]"/>
    </record>
</odoo>
