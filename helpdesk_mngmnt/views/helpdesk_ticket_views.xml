<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_view_search" model="ir.ui.view">
        <field name="name">helpdesk.ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Tickets">
                <field name="code"/>
                <field name="name" string="Ticket"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="description"/>

                <filter name="my_tickets" string="My Tickets" domain="[('author_id', '=', uid)]"/>
                <filter name="unassigned_tickets" string="Unassigned" domain="[('user_id', '=', False)]"/>
                <separator/>
                <filter name="open_tickets" string="Open" domain="[('stage_id.fold', '=', False)]"/>
                <filter name="closed_tickets" string="Closed" domain="[('stage_id.fold', '=', True)]"/>
                <filter name="closed_on_today" string="Today"
                        domain="[('date_closed', '&gt;', datetime.datetime.combine(context_today() - relativedelta(days=1), datetime.time(23, 59, 59)).to_utc())]"/>
                <filter name="closed_on_last_7_days" string="Last 7 Days"
                        domain="[('date_closed', '&gt;', datetime.datetime.combine(context_today() - relativedelta(days=7), datetime.time(23, 59, 59)).to_utc())]"/>
                <filter name="closed_on_last_30_days" string="Last 30 Days"
                        domain="[('date_closed', '&gt;', datetime.datetime.combine(context_today() - relativedelta(days=30), datetime.time(23, 59, 59)).to_utc())]"/>
                <filter name="closed_on_last_365_days" string="Last 365 Days"
                        domain="[('date_closed', '&gt;', datetime.datetime.combine(context_today() - relativedelta(days=365), datetime.time(23, 59, 59)).to_utc())]"/>
            </search>
        </field>
    </record>

    <record id="helpdesk_ticket_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Tickets">
                <field name="code"/>
                <field name="name"/>
                <field name="description" optional="hide"/>
                <field name="author_id" widget="many2one_avatar_user"/>
                <field name="team_id"/>
                <field name="create_date"/>
                <field name="date_closed"/>
                <field name="stage_id"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"
                           attrs="{'invisible': [('id', '=', False)]}"/>
                </header>

                <field name="id" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="active" invisible="1"/>
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"/>
                <sheet string="Ticket">
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="name" class="o_text_overflow" placeholder="Name..."/>
                            <span attrs="{'invisible': [('id', '=', False)]}">/</span>
                            <field name="code" attrs="{'invisible': [('id', '=', False)]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="team_id"/>
                            <field name="user_id" widget="many2one_avatar_user" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one" options="{'no_create_edit': True}"/>
                            <field name="priority" widget="priority"/>
<!--                            <field name="module_id"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" type="html" options="{'collaborative': true, 'resizable': false}"
                                   placeholder="Ticket description..."/>
                        </page>
                        <page name="extra_info" string="Extra Information" groups="base.group_no_one">
                            <group>
                                <field name="create_date"/>
                                <field name="author_id" widget="many2one_avatar_user"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_view_kanban" model="ir.ui.view">
        <field name="name">helpdesk.ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="stage_id" sample="1">
                <field name="active"/>
                <field name="team_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown"
                                   href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a type="edit" class="dropdown-item" role="menuitem">
                                            Edit
                                        </a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a type="delete" class="dropdown-item" role="menuitem">
                                            Delete
                                        </a>
                                    </t>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>/<field name="code"/>
                                    </strong>
                                </div>
                                <div>
                                    <field name="type_id"/>
                                </div>
                                <div>
                                    <field name="partner_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field t-if="record.user_id.raw_value" name="user_id"
                                               widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="helpdesk_ticket_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tickets found. Let's create one!
            </p>
        </field>
    </record>

    <record id="helpdesk_ticket_action_tickets_by_type" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">
            {
                'default_type_id': active_id
            }
        </field>
        <field name="domain">
            [
                ('type_id', '=', active_id)
            ]
        </field>
        <field name="search_view_id" ref="helpdesk_ticket_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tickets found. Let's create one!
            </p>
        </field>
    </record>

    <record id="helpdesk_ticket_action_open_tickets" model="ir.actions.act_window">
        <field name="name">Open Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">
            {
                'search_default_open_tickets': True
            }
        </field>
        <field name="domain">
            [
                ('type_id', '=', active_id)
            ]
        </field>
        <field name="search_view_id" ref="helpdesk_ticket_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tickets found. Let's create one!
            </p>
        </field>
    </record>

    <record id="helpdesk_ticket_action_unassigned_tickets" model="ir.actions.act_window">
        <field name="name">Unassigned Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">
            {
                'search_default_unassigned_tickets': True,
                'search_default_open_tickets': True
            }
        </field>
        <field name="domain">
            [
                ('type_id', '=', active_id)
            ]
        </field>
        <field name="search_view_id" ref="helpdesk_ticket_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tickets found. Let's create one!
            </p>
        </field>
    </record>
</odoo>
