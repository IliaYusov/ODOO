<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_view_form_inherit_task" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit.task</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mngmnt.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action" name="%(task_task_action_view_ticket_tasks)d"
                        icon="fa-tasks">
                    <field string="Tasks" name="task_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
